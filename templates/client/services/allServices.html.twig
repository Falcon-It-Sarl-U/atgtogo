							{# <div class="service-two__card-icon">
								<i class="atgtogo-icon-tractor"></i>
							</div> #}
							<h3>
								<a href="{{ path('app_client_service_show', {'id': service.id}) }}">{{ service.titre }}</a>
							</h3>
							<p>{{ service.description1|slice(0,30) }}</p>
						</div>
					</div>
				</div>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
