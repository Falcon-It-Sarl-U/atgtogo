{% extends 'base.html.twig' %}
{% block slider %}{% endblock %}
{% block body %}

	<div class="stricky-header stricked-menu main-menu">
		<div class="sticky-header__content"></div>
	</div>
	<section class="page-header">
		<div class="page-header__bg" style="background-image: url({{asset('assets/Client/images/backgrounds/page-header-bg-1-1.jpg')}});"></div>
		<div class="container">
			<ul class="thm-breadcrumb list-unstyled">
				<li>
					<a href="{{ path('app_produits_index') }}">Produits</a>
				</li>
				<li>/</li>
				<li>
					<span>Détails du produit</span>
				</li>
			</ul>
			<h2>Détails du produit</h2>
		</div>
	</section>

	<section class="project-details">
		<div class="container">
			<img src="{{ asset('uploads/images/produits/' ~ produit.image2) }}" class="img-fluid" alt="Agro Trading Group|Produit Image" width="770" height="432">
			{# <img src="{{ asset('uploads/images/produits/' ~ produit.image2) }}" class="img-fluid" alt="Agro Trading Group|Produit Image" width="770" height="auto" style="max-width: 100%;"> #}


			<ul class="list-unstyled project-details__list">
				
				<li>
					<span>Category:
					</span>
					Agriculture, Eco
				</li>
				<li>
					<span>Service:
					</span>
					Organic Products
				</li>
			</ul>
			<h2>{{ produit.nom }}</h2>
			<p>{{ produit.description1 }}</p>
			<div class="bottom-content">
				<div class="row">
					<div class="col-lg-6">
						<h3>Découvrez les Bienfaits du {{ produit.nom }}</h3>
						<p>{{ produit.description2 }}</p>
						<ul class="list-unstyled project-details__check-list">
							<li>
								<i class="fa fa-check-circle"></i>
								{{ produit.avantage }}
							</li>
							<li>
								<i class="fa fa-check-circle"></i>
                                {{ produit.avantage2 }}

							</li>
							<li>
								<i class="fa fa-check-circle"></i>
                                {{ produit.avantage3 }}
							</li>
						</ul>
					</div>
					<div class="col-lg-6">
						<div class="project-details__images">
							<img src="assets/images/projects/project-d-2-1.jpg" alt="">
							<img src="assets/images/projects/project-d-2-2.jpg" alt="">
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
