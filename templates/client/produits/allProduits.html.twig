{% extends 'base.html.twig' %}
{% block slider %}{% endblock %}
{% block body %}


    <div class="stricky-header stricked-menu main-menu">
        <div class="sticky-header__content"></div>
    </div>
    <section class="page-header">
        <div class="page-header__bg" style="background-image: url({{asset('assets/Client/images/backgrounds/page-header-bg-1-1.jpg')}});"></div>
        <div class="container">
            <ul class="thm-breadcrumb list-unstyled">
                <li><a href="{{ path('app_index') }}">Accueil</a></li>
                <li>/</li>
                <li><span>Produits</span></li>
            </ul>
            <h2>Nos Produits</h2>
        </div>
    </section>

    <div class="projects-one">
        <div class="container">
            <div class="row">
                {% for produit in produits %}
                <div class="col-sm-12 col-md-6 col-lg-4">
                    <div class="projects-one__single">
                        <img src="{{ asset('uploads/images/produits/' ~ produit.image) }}" alt="Produit Image|Agro Trading Group" width="300" height="400">
                        <div class="projects-one__content">
                            <h3>{{ produit.nom }}</h3>
                            <a href="{{ path('app_client_produit_show', {'id': produit.id}) }}" class="projects-one__button"><i class="atgtogo-icon-right-arrow"></i></a>
                        </div>
                    </div>
                </div>
            {% else %}
                <tr>
                    <td colspan="10">no records found</td>
                </tr>
            {% endfor %}
            </div>
        </div>
    </div>

    
{% endblock %}