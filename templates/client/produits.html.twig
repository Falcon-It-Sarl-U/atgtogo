<div class="container">
	<div class="row">
		{% for produit in produits %}
			<div class="col-md-12 col-lg-4 wow fadeInUp" data-wow-duration="1500ms">
				<div class="service-one__box">
					<img src="{{ asset('uploads/images/produits/' ~ produit.image) }}" alt="Slide Image" width="200" height="300">
					<div class="service-one__box-content">
						<h3>
							<a href="{{ path('app_client_produit_show', {'id': produit.id}) }}">{{ produit.nom }}</a>
						</h3>
					</div>
				</div>
			</div>
		{% else %}
			<tr>
				<td colspan="5">no records found</td>
			</tr>
		{% endfor %}
	</div>
</div>
