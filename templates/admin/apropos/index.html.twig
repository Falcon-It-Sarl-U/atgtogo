{% extends 'baseAdmin.html.twig' %}

{% block title %}Apropos index
{% endblock %}

{% block body %}
	<h1>Apropos index</h1>
	<div class="alert alert-warning alert-dismissible" role="alert">
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-header">
					<h5 class="card-title">Table with Buttons</h5>
					<h6 class="card-subtitle text-muted">
						<a class="btn btn-primary" href="{{ path('app_admin_apropos_new') }}">Ajouter</a>
					</h6>
				</div>
				<div class="card-body">
					<table id="datatables-buttons" class="table table-striped" style="width:100%">
						<thead>
							<tr>
								<th>Id</th>
								<th>Titre</th>
								<th>Valeur</th>
								<th>Valeur2</th>
								<th>Valeur3</th>
								<th>Valeur4</th>
								<th>Nom_directeur</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for apropo in apropos %}
								<tr>
									<td>{{ apropo.id }}</td>
									<td>{{ apropo.titre }}</td>
									<td>{{ apropo.valeur }}</td>
									<td>{{ apropo.valeur2 }}</td>
									<td>{{ apropo.valeur3 }}</td>
									<td>{{ apropo.valeur4 }}</td>
									<td>{{ apropo.nomDirecteur }}</td>
									<td>
										<a class="btn btn-warning" href="{{ path('app_admin_apropos_edit', {'id': apropo.id}) }}">Modifier</a>
										{% if apropo.statut %}
											<a class="btn btn-success" href="{{ path('app_apropos_desactiver', {'id': apropo.id}) }}" class="badge bg-label-primary me-1">
												<i class="ti ti-off me-1"></i>
												Activer

											</a>
										{% else %}
											<a class="btn btn-warning" href="{{ path('app_admin_apropos_index', {'id': apropo.id}) }}" class="badge bg-label-danger me-1">
												DÃ©sactiver

											</a>
										{% endif %}
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="8">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
