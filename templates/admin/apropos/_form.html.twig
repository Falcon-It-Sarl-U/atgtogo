<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<h5 class="card-title">A Propos</h5>
			<h6 class="card-subtitle text-muted">Tous les champs sont obligatoires</h6>
		</div>
		<div class="card-body">
			{{ form_start(form) }}
			
            <div class="row">
				<div class="mb-3 col-md-6">
					{{ form_row(form.titre) }}
				</div>
				<div class="mb-3 col-md-6"></div>
			</div>
		
			<div class="row">
				<div class="mb-3 col-md-6">
					{{ form_row(form.valeur) }}
				</div>
				<div class="mb-3 col-md-6">
					{{ form_row(form.valeur2) }}
				</div>
			</div>
			<div class="row">
				<div class="mb-3 col-md-6">
					{{ form_row(form.valeur3)}}
				</div>
				<div class="mb-3 col-md-6">
					{{ form_row(form.valeur4) }}
				</div>
			</div>
            <div class="row">
				<div class="mb-3 col-md-6">
					{{ form_row(form.nom_directeur) }}
				</div>
				<div class="mb-3 col-md-6"></div>
			</div>
			<button type="submit" class="btn btn-primary">Enregistrer</button>
			{{ form_end(form) }}
		</div>
	</div>
</div>
