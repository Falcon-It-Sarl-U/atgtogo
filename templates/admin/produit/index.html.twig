{% extends 'baseAdmin.html.twig' %}

{% block title %}Produit index
{% endblock %}

{% block body %}
	<h1>Produit index</h1>
	<div class="alert alert-warning alert-dismissible" role="alert">
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-header">
					<h5 class="card-title">Table with Buttons</h5>
					<h6 class="card-subtitle text-muted">
						<a class="btn btn-primary" href="{{ path('app_admin_produit_new') }}">Ajouter</a>
					</h6>
				</div>
				<div class="card-body">
					<table id="datatables-buttons" class="table table-striped" style="width:100%">
						<thead>
							<tr>
								<th>Id</th>
								<th>Image</th>

								<th>Nom</th>
								<th>Description1</th>
								<th>Description2</th>
								<th>Avantage</th>
								<th>Avantage2</th>
								<th>Avantage3</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for produit in produits %}
								<tr>
									<td>{{ produit.id }}</td>
									<td>
										<img src="{{ asset('uploads/images/produits/' ~ produit.image) }}" alt="Produit Image" width="75">
										<img src="{{ asset('uploads/images/produits/' ~ produit.image2) }}" alt="Produit Image" width="75">
									</td>

									<td>{{ produit.nom }}</td>
									<td>{{ produit.description1|slice(0,30) }}</td>
									<td>{{ produit.description2|slice(0,30) }}</td>
									<td>{{ produit.avantage|slice(0,30) }}...</td>
									<td>{{ produit.avantage2|slice(0,30) }}...</td>
									<td>{{ produit.avantage3|slice(0,30) }}...</td>
									<td>
										<a class="btn btn-warning" href="{{ path('app_admin_produit_edit', {'id': produit.id}) }}">edit</a>

										{% if produit.statut %}
											<a class="btn btn-success" href="{{ path('app_produit_desactiver', {'id': produit.id}) }}" class="badge bg-label-primary me-1">
												<i class="ti ti-off me-1"></i>
												Activer

											</a>
										{% else %}
											<a class="btn btn-warning" href="{{ path('app_produit_activer', {'id': produit.id}) }}" class="badge bg-label-danger me-1">
												DÃ©sactiver

											</a>
										{% endif %}
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="10">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
