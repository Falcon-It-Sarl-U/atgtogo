{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ blog.titre }}</td>
            </tr>
            <tr>
                <th>Paragraphe1</th>
                <td>{{ blog.paragraphe1 }}</td>
            </tr>
            <tr>
                <th>Paragraphe2</th>
                <td>{{ blog.paragraphe2 }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ blog.date ? blog.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ blog.auteur }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ blog.image }}</td>
            </tr>
        </tbody>
    </table>

    <a class='btn btn-success' href="{{ path('app_admin_blog_index') }}">back to list</a>

    <a class='btn btn-warning' href="{{ path('app_admin_blog_edit', {'id': blog.id}) }}">edit</a>

    {{ include('admin/blog/_delete_form.html.twig') }}
{% endblock %}
