{% extends 'baseAdmin.html.twig' %}

	{% block title %}Slide index
	{% endblock %}
	
	{% block body %}
	
	
		<h1 class="h3 mb-3">Liste des Slides</h1>
	
		<div class="alert alert-warning alert-dismissible" role="alert">
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<h5 class="card-title">Table with Buttons</h5>
						<h6 class="card-subtitle text-muted">
						<a  class="btn btn-primary" href="{{ path('app_home_slide_new') }}">Create new</a>
	
							</h6>
					</div>
					<div class="card-body">
						<table id="datatables-buttons" class="table table-striped" style="width:100%">
							<thead>
								<tr>
									<th>ID</th>
									<th>Image</th>
									<th>Titre</th>
									<th>Description</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								{% for slide in slides %}
									<tr>
										<td>{{ slide.id }}</td>
										<td> <img src="{{ asset('uploads/images/home/slider/' ~ slide.image) }}" alt="Slide Image" width="200"></td>
										<td>{{ slide.titre }}</td>
										<td>{{ slide.description }}</td>
										<td>
											<a class="btn btn-primary" href="{{ path('app_home_slide_edit', {'id': slide.id}) }}">Modifier</a>

											{% if slide.statut %}
												<a class="btn btn-success" href="{{ path('app_slide_desactiver', {'id': slide.id}) }}" class="badge bg-label-primary me-1">
													<i class="ti ti-off me-1"></i>  Activer

												</a>
											{% else %}
												<a  class="btn btn-warning" href="{{ path('app_slide_activer', {'id': slide.id}) }}" class="badge bg-label-danger me-1">
													DÃ©sactiver

												</a>
											{% endif %}
										</td>
									</tr>
	
								{% else %}
									<tr>
										<td colspan="5">no records found</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	
	
	{% endblock %}
	