<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<h5 class="card-title">Certification</h5>
			<h6 class="card-subtitle text-muted">Tous les champs sont obligatoires</h6>
		</div>
		<div class="card-body">
			{{ form_start(form) }}
			<div class="row">
				<div class="mb-3 col-md-6">
					{{ form_row(form.nom) }}
				</div>
				<div class="mb-3 col-md-6"></div>
			</div>
            <div class="row">
				<div class="mb-3 col-md-6">
					{{ form_row(form.description) }}
				</div>
			</div>
          
        
			<div class="row">
				<div class="mb-3 col-md-6">
					{% if certification.image %}
						<img src="{{ asset('uploads/images/certification/' ~ certification.image) }}" alt="Produit Image" width="200">
					{% endif %}
					{{ form_row(form.image, { 'required': false }) }}
					<small class="form-text text-muted">Example block-level help text here.</small>
				</div>
				
			</div>
			<button type="submit" class="btn btn-primary">Enregistrer</button>
			{{ form_end(form) }}
		</div>
	</div>
</div>
